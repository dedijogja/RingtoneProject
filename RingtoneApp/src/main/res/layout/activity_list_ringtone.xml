<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5e4e4"
   >

    <LinearLayout
        android:id="@+id/menuAt"
        android:background="#a21451"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <ImageView
            android:layout_marginLeft="5dp"
            android:id="@+id/tombolKembali"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/back_icon"/>

        <TextView
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:text="List Ringtones"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/menuAt"
        android:id="@+id/recycleListRingtone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/iklanBannerKecil"
        />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:id="@+id/iklanBannerKecil"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

</RelativeLayout>
